<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@null"
    android:dividerHeight="0dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/textView_image"
        android:layout_width="@dimen/roundSize"
        android:layout_height="@dimen/roundSize"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin16"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginRight="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        android:layout_weight="4"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_section"
            style="@style/leftDetails"
            android:layout_weight="1"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="@dimen/textSize12"
            tools:text="Section" />

        <TextView
            android:id="@+id/textView_title"
            style="@style/leftDetails"
            android:layout_weight="2"
            android:maxLines="2"
            android:textSize="@dimen/textSize16"
            tools:text="Title of the article" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginTop="@dimen/margin16"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_author"
            style="@style/rightDetails"
            tools:text="Author name" />

        <TextView
            android:id="@+id/textView_date"
            style="@style/rightDetails"
            tools:text="dd-mm-yyyy" />

        <TextView
            android:id="@+id/textView_time"
            style="@style/rightDetails"
            tools:text="hh:mm:ss" />
    </LinearLayout>

</LinearLayout>